@model movie.Models.User.UserCreate

<div id="modal-create-employee" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Create Employee</h3>
            <button class="modal-close" data-modal-target="modal-create-employee">&times;</button>
        </div>
        <div class="modal-body">
            <form method="post" asp-page="Employee" asp-page-handler="Create" class="flex flex-col gap-3">
                <div>
                    <label>Name</label>
                    <input
                        type="text"
                        class="input-custom"
                        asp-for="Name"
                        placeholder="Enter name"/>
                </div>
                <div>
                    <label>Email</label>
                    <input
                        type="email"
                        class="input-custom"
                        asp-for="Email"
                        placeholder="Enter email"/>
                </div>
                <div>
                    <label>Password</label>
                    <input
                        type="password"
                        class="input-custom"
                        asp-for="Password"
                        placeholder="Enter password"/>
                </div>
                <div>
                    <label>Birthday</label>
                    <div class="flex items-center gap-2.5">
                        <select required asp-for="Month" class="month-custom input-custom"></select>
                        <select required asp-for="Day" class="day-custom input-custom"></select>
                        <select required asp-for="Year" class="year-custom input-custom"></select>
                    </div>
                </div>
                <div class="">
                    <button type="submit" class="btn bg-primary text-white">Save</button>
                    <button class="btn bg-gray-500 text-white" data-modal-target="modal-create-employee">Cancel</button>
                </div>
            </form>
        </div>

    </div>
</div>