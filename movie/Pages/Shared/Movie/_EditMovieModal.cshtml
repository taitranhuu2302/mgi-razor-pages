@model movie.Models.Movie.MovieEdit


<div id="modal-edit-movie" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Edit Movie</h3>
            <button class="modal-close" data-modal-target="modal-edit-movie">&times;</button>
        </div>
        <div class="modal-body">
            <form id="edit-movie" class="flex flex-col gap-3">
                <input type="text" hidden asp-for="Id">
                <div>
                    <label>Name</label>
                    <input
                        type="text"
                        class="input-custom"
                        asp-for="Name"
                        placeholder="Enter name"/>
                </div>
                <div>
                    <label>Image</label>
                    <input
                        type="text"
                        class="input-custom"
                        asp-for="Image"
                        placeholder="Enter image"/>
                </div>
                <div>
                    <label>Price</label>
                    <input
                        type="number"
                        class="input-custom"
                        asp-for="Price"
                        placeholder="Enter Price"/>
                </div>
                <div class="list-error"></div>
                <div class="">
                    <button type="submit" class="btn bg-primary text-white">Save</button>
                    <button type="button" class="btn bg-gray-500 text-white" data-modal-target="modal-edit-movie">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>