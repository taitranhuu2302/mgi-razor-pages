@page
@using movie.Models.Movie
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using movie.Models
@using movie.Models.ViewModel
@model movie.Pages.Movie

@{
    Layout = "Shared/_LayoutAdmin";
}

<style scoped>
    .table tbody tr td {
        width: calc(100%/5);
    }
</style>

<div class="mt-20">
    <h3 class="text-3xl font-semibold text-primary text-center">Manage Movie</h3>
    <div class="flex justify-end mb-3">
        <button class="btn bg-primary text-white" data-modal-target="modal-create-movie">Add New Movie</button>
    </div>
    <div class="my-3 flex items-end flex-col">
        <p class="text-lg font-semibold">Hide column</p>
        <div class="flex items-center gap-3">
            <div class="checkbox-control">
                <input id="cb-id" type="checkbox">
                <label for="cb-id">Id</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-image" type="checkbox">
                <label for="cb-image">Image</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-name" type="checkbox">
                <label for="cb-name">Name</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-price" type="checkbox">
                <label for="cb-price">Price</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-actions" type="checkbox">
                <label for="cb-actions">Action</label>
            </div>
        </div>
    </div>
    <div class="shadow">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50 sticky top-0">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var m in Model.Movies)
            {
                <tr>
                    <td>
                        <div class="table-text">@m.Id</div>
                    </td>
                    <td>
                        <div class="table-text">
                            <img src="@m.Image" alt="" class="h-[100px]" onerror="this.onerror=null; this.src='https://phutungnhapkhauchinhhang.com/wp-content/uploads/2020/06/default-thumbnail.jpg'">
                        </div>
                    </td>
                    <td>
                        <div class="table-text">@m.Name</div>
                    </td>
                    <td>
                        <div class="table-text">$@m.Price</div>
                    </td>
                    <td>
                        <div class="flex items-center">
                            <button class="btn" data-obj='@Json.Serialize(m)' data-modal-target="modal-edit-movie">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form method="post" asp-page="Movie" asp-page-handler="Remove" asp-route-id="@m.Id">
                                <button type="button" class="btn btn-confirm">
                                    <i class="fas fa-trash"></i>
                                </button>
                                @await Html.PartialAsync("Shared/_PopupConfirm", new PopupConfirmModel()
                                       {
                                           Message = "Are you sure you want to delete this?"
                                       })
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("Shared/_Pagination", Model.PaginateModel)
    @await Html.PartialAsync("Shared/Movie/_CreateMovieModal", new MovieCreate())
    @await Html.PartialAsync("Shared/Movie/_EditMovieModal", new MovieEdit())
</div>

@section Scripts
{
    <script src="~/js/movie.js"></script>
    <script src="~/js/table.js"></script>
}