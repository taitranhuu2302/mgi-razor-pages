@page
@using movie.Models.Movie
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using movie.Models
@using movie.Models.ViewModel
@model movie.Pages.Movie

@{
    Layout = "Shared/_LayoutAdmin";
}

<style scoped>
    .table tbody tr td {
        width: calc(100%/5);
    }
</style>

<div class="mt-20">
    <h3 class="text-3xl font-semibold text-primary text-center">Manage Movie</h3>
    <div class="flex justify-end mb-3">
        <button class="btn bg-primary text-white" data-modal-target="modal-create-movie">Add New Movie</button>
    </div>
    <div class="my-3 flex items-end flex-col">
        <p class="text-lg font-semibold">Hide column</p>
        <div class="flex items-center gap-3">
            <div class="checkbox-control">
                <input id="cb-id" type="checkbox">
                <label for="cb-id">Id</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-image" type="checkbox">
                <label for="cb-image">Image</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-name" type="checkbox">
                <label for="cb-name">Name</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-price" type="checkbox">
                <label for="cb-price">Price</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-actions" type="checkbox">
                <label for="cb-actions">Action</label>
            </div>
        </div>
    </div>
    <div class="shadow">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50 sticky top-0">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody id="movies" class="bg-white divide-y divide-gray-200">
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("Shared/_PopupConfirm")
    @await Html.PartialAsync("Shared/_Pagination")
    @await Html.PartialAsync("Shared/Movie/_CreateMovieModal", new MovieCreate())
    @await Html.PartialAsync("Shared/Movie/_EditMovieModal", new MovieEdit())
</div>

@section Scripts
{
    <script type="module" src="~/js/movie.js"></script>
    <script type="module" src="~/js/table.js"></script>
}