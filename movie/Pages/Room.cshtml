@page
@using movie.Models.Room
@using System.Web
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using movie.Models.ViewModel
@model movie.Pages.Room

@{
    Layout = "Shared/_LayoutAdmin";
}

<style scoped>
    .table tr td {
        width: calc(100%/8);
    }
</style>

<div class="mt-20">
    <h3 class="text-3xl font-semibold text-primary text-center">Manage Room</h3>
    <div class="flex justify-end mb-3">
        <button class="btn bg-primary text-white" data-modal-target="modal-create-room">Add New Room</button>
    </div>
    <div class="my-3 flex items-end flex-col">
        <p class="text-lg font-semibold">Hide column</p>
        <div class="flex items-center gap-3">
            <div class="checkbox-control">
                <input id="cb-id" type="checkbox">
                <label for="cb-id">Id</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-name" type="checkbox">
                <label for="cb-name">Name</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-seats" type="checkbox">
                <label for="cb-seats">Seats</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-start-time" type="checkbox">
                <label for="cb-start-time">Start Time</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-end-time" type="checkbox">
                <label for="cb-end-time">End Time</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-staff" type="checkbox">
                <label for="cb-staff">Duty Staff</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-status" type="checkbox">
                <label for="cb-status">Status</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-actions" type="checkbox">
                <label for="cb-actions">Action</label>
            </div>
        </div>
    </div>
    <div class="shadow">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Seats</th>
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
                <th scope="col">Duty Staff</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var r in Model.Rooms)
            {
                <tr>
                    <td>
                        <div class="table-text">@r.Id</div>
                    </td>
                    <td>
                        <div class="table-text">@r.Name</div>
                    </td>
                    <td>
                        <div class="table-text">@r.Seats</div>
                    </td>
                    <td>
                        <div class="table-text">@r.StartTime</div>
                    </td>
                    <td>
                        <div class="table-text">@r.EndTime</div>
                    </td>
                    <td>
                        <div class="table-text">@r.UserModel?.Name</div>
                    </td>
                    <td>
                        <div class="table-text">@r.RoomStatus</div>
                    </td>
                    <td>
                        <div class="flex items-center">
                            <button class="btn" data-obj='@Json.Serialize(r)' data-modal-target="modal-edit-room">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form method="post" asp-page="Room" asp-page-handler="Remove" asp-route-roomId="@r.Id">
                                <button type="button" class="btn btn-confirm">
                                    <i class="fas fa-trash"></i>
                                </button>
                                @await Html.PartialAsync("Shared/_PopupConfirm", new PopupConfirmModel()
                                       {
                                           Message = "Are you sure you want to delete this?"
                                       })
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("Shared/_Pagination", Model.PaginateModel)
    @await Html.PartialAsync("Shared/Room/_CreateRoomModal", new RoomCreate())
    @await Html.PartialAsync("Shared/Room/_EditRoomModal", new RoomEdit())
</div>

@section Scripts
{
    <script src="~/js/room.js"></script>
    <script src="~/js/table.js"></script>
}