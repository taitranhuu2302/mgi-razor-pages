@page
@using movie.Models.Room
@using System.Web
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using movie.Models.ViewModel
@model movie.Pages.Room

@{
    Layout = "Shared/_LayoutAdmin";
}

<style scoped>
    .table tr td {
        width: calc(100%/8);
    }
</style>

<div class="mt-20">
    <h3 class="text-3xl font-semibold text-primary text-center">Manage Room</h3>
    <div class="flex justify-end mb-3">
        <button class="btn bg-primary text-white" data-modal-target="modal-create-room">Add New Room</button>
    </div>
    <div class="my-3 flex items-end flex-col">
        <p class="text-lg font-semibold">Hide column</p>
        <div class="flex items-center gap-3">
            <div class="checkbox-control">
                <input id="cb-id" type="checkbox">
                <label for="cb-id">Id</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-name" type="checkbox">
                <label for="cb-name">Name</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-seats" type="checkbox">
                <label for="cb-seats">Seats</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-start-time" type="checkbox">
                <label for="cb-start-time">Start Time</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-end-time" type="checkbox">
                <label for="cb-end-time">End Time</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-staff" type="checkbox">
                <label for="cb-staff">Duty Staff</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-status" type="checkbox">
                <label for="cb-status">Status</label>
            </div>
            <div class="checkbox-control">
                <input id="cb-actions" type="checkbox">
                <label for="cb-actions">Action</label>
            </div>
        </div>
    </div>
    <div class="shadow">
        <table class="table min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Seats</th>
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
                <th scope="col">Duty Staff</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody id="rooms" class="bg-white divide-y divide-gray-200">
            
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("Shared/_Pagination")
    @await Html.PartialAsync("Shared/_PopupConfirm")
    @await Html.PartialAsync("Shared/Room/_CreateRoomModal", new RoomCreate())
    @await Html.PartialAsync("Shared/Room/_EditRoomModal", new RoomEdit())
</div>

@section Scripts
{
    <script type="module" src="~/js/room.js"></script>
    <script type="module" src="~/js/table.js"></script>
}